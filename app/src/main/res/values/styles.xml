<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorLightBackground</item>
        <item name="colorPrimaryDark">@color/colorCanvas</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorCanvas</item>
        <item name="android:statusBarColor">@color/colorCanvas</item>
        <item name="android:textColor">@color/colorTextMain</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:statusBarColor">@color/colorCanvas</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="MainActivityTheme" parent="AppTheme">
        <item name="android:statusBarColor">@color/colorLightBackground</item>
    </style>


    <style name="EditTextBox">
        <item name="android:background">@drawable/input_background</item>
    </style>

    <style name="ExtendedEditText">
        <item name="android:textColor">@color/colorTextMain</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FilledButton">
        <item name="android:paddingStart">@dimen/padding_double</item>
        <item name="android:paddingEnd">@dimen/padding_double</item>
        <item name="android:background">@drawable/filled_button_background</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorTextButton</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

    <style name="TransparentLabel">
        <item name="android:textColor">@android:color/transparent</item>
    </style>


    <style name="MemItemIconContainer">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_mem_content</item>
        <item name="android:layout_marginTop">@dimen/margin_default</item>
        <item name="android:layout_marginBottom">@dimen/margin_default</item>
    </style>

    <style name="IconButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">@dimen/icon_button_size</item>
        <item name="android:layout_height">@dimen/icon_button_size</item>
    </style>

    <style name="MemLabelText">
        <item name="android:layout_marginEnd">@dimen/margin_mem_content</item>
        <item name="android:layout_marginStart">@dimen/margin_mem_content</item>
        <item name="android:layout_marginTop">@dimen/margin_mem_content</item>
        <item name="android:textSize">@dimen/content_text_size</item>
        <item name="android:textColor">@color/colorTextMain</item>
    </style>
</resources>